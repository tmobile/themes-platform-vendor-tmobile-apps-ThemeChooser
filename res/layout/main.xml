<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chooserheader_marginTop"
        android:layout_marginBottom="@dimen/chooserheader_marginBottom"
        android:gravity="center_horizontal"
        style="@style/ComposedTitle" >

        <TextView
            style="@style/ChooserText.Title"
            android:text="@string/app_title" />

        <TextView
            android:id="@+id/adapter_position"
            style="@style/ChooserText.Position" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="2dp"
            android:unselectedAlpha="0.5"
            />

        <TextView
            android:id="@+id/theme_name"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            style="@style/ChooserText"
            />

    </FrameLayout>

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/apply"
        style="@style/ChooserApply"
        />

</LinearLayout>
